<div>
    <div data-bind="visible: isRunning">
        <h1>Current Print Job</h1>
        <div class="tlp-currentPrint">
            <div class="info">
                <div>Frames Captured:</div>
                <div data-bind="text: snapshotCount"></div>
            </div>
            <div class="preview">
                <img data-bind="attr: {src: previewImage}" />
            </div>
        </div>
    </div>

    <h1>Render Jobs</h1>
    <ul data-bind="foreach: renderJobs">
        <li data-bind="text: $data.name + ' (' + $data.state + ')'+ ' (' + $data.progress + ' %)'"></li>
    </ul>

    <h1>Videos</h1>
    <ul data-bind="foreach: videos">
        <li data-bind="text: $data.file"></li>
        <img data-bind="attr: {src: $data.thumbnail}" style="width: 3em" />
        <div class="btn-group action-buttons">
            <div href="javascript:void(0)" class="btn btn-mini" data-bind="click: function(){ $parent.delete('video', $data.id) }"><i class="fas fa-trash"></i></div>
        </div>
    </ul>

    <h1>Frame Collections</h1>
    <ul data-bind="foreach: frameCollections">
        <li data-bind="text: $data.file + ' (' + $data.frames + ' Frames)'"></li>
        <img data-bind="attr: {src: $data.thumbnail}" style="width: 3em" />
        <div class="btn-group action-buttons">
            <div href="javascript:void(0)" class="btn btn-mini" data-bind="click: $parent.startRender"><i class="fas fa-file-video"></i></div>
            <div href="javascript:void(0)" class="btn btn-mini" data-bind="click: function(){ $parent.delete('frameZip', $data.id) }"><i class="fas fa-trash"></i></div>
        </div>
    </ul>

</div>
